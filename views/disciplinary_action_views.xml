<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- ═══════════════════════════════════════════════════════════════ -->
        <!--  LIST VIEW                                                      -->
        <!-- ═══════════════════════════════════════════════════════════════ -->
        <record id="view_hr_disciplinary_action_list" model="ir.ui.view">
            <field name="name">hr.disciplinary.action.list</field>
            <field name="model">hr.disciplinary.action</field>
            <field name="arch" type="xml">
                <list string="Disciplinary Cases">
                    <field name="name" string="Reference"/>
                    <field name="employee_id" string="Employee"/>
                    <field name="department_id" string="Department"/>
                    <field name="action_type" string="Action Type"/>
                    <field name="severity" string="Severity"/>
                    <field name="incident_date" string="Incident Date"/>
                    <field name="decision" string="Decision" widget="badge"
                           decoration-success="decision == 'verbal'"
                           decoration-warning="decision == 'written'"
                           decoration-danger="decision == 'last'"/>
                </list>
            </field>
        </record>

        <!-- ═══════════════════════════════════════════════════════════════ -->
        <!--  FORM VIEW                                                      -->
        <!-- ═══════════════════════════════════════════════════════════════ -->
        <record id="view_hr_disciplinary_action_form" model="ir.ui.view">
            <field name="name">hr.disciplinary.action.form</field>
            <field name="model">hr.disciplinary.action</field>
            <field name="arch" type="xml">
                <form string="Disciplinary Case">
                    <sheet>
                        <!-- Title -->
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>

                        <!-- Main Fields -->
                        <group>
                            <group>
                                <field name="employee_id"
                                       options="{'no_create': True}"/>
                                <field name="incident_date"/>
                            </group>
                            <group>
                                <field name="department_id"/>
                            </group>
                        </group>

                        <!-- Notebook Tabs -->
                        <notebook>

                            <!-- ── Tab 1: Incident Details ──────────────── -->
                            <page string="Information Details" name="incident_details">
                                <group string="Incident Description">
                                    <field name="incident_description"
                                           nolabel="1"
                                           placeholder="Describe the incident in detail..."/>
                                </group>
                                <group string="Investigation Result">
                                    <group>
                                        <field name="action_type"/>
                                        <field name="severity"/>
                                        <field name="investigation_notes"
                                               string="Investigation Notes"
                                               placeholder="Reviewed incident, interviewed witnesses. Evidence gathered."/>
                                    </group>
                                </group>
                                <group string="Attachments">
                                    <field name="attachment_ids"
                                           nolabel="1"
                                           widget="many2many_binary"/>
                                </group>
                                <group>
                                    <group>
                                        <field name="decision"/>
                                        <field name="decision_date"/>
                                    </group>
                                </group>
                                <group string="Decision Notes">
                                    <field name="decision_notes"
                                           nolabel="1"
                                           placeholder="Enter the final decision details and justification..."/>
                                </group>
                            </page>

                        </notebook>
                    </sheet>

                    <!-- Chatter -->
                    <chatter/>
                </form>
            </field>
        </record>

        <!-- ═══════════════════════════════════════════════════════════════ -->
        <!--  SEARCH VIEW                                                    -->
        <!-- ═══════════════════════════════════════════════════════════════ -->
        <record id="view_hr_disciplinary_action_search" model="ir.ui.view">
            <field name="name">hr.disciplinary.action.search</field>
            <field name="model">hr.disciplinary.action</field>
            <field name="arch" type="xml">
                <search string="Search Disciplinary Cases">
                    <field name="name" string="Reference"/>
                    <field name="employee_id"/>
                    <field name="action_type"/>
                    <field name="department_id"/>

                    <!-- Filters -->
                    <filter name="filter_verbal"
                            string="Verbal Warning"
                            domain="[('decision', '=', 'verbal')]"/>
                    <filter name="filter_written"
                            string="Second Written Warning"
                            domain="[('decision', '=', 'written')]"/>
                    <filter name="filter_last"
                            string="Last Written Warning"
                            domain="[('decision', '=', 'last')]"/>

                    <separator/>

                    <filter name="filter_today"
                            string="Today"
                            domain="[('decision_date', '=', context_today().strftime('%Y-%m-%d'))]"/>
                    <filter name="filter_this_month"
                            string="This Month"
                            domain="[('decision_date', '&gt;=', (context_today()).strftime('%Y-%m-01')),
                                     ('decision_date', '&lt;', (context_today() + relativedelta(months=1)).strftime('%Y-%m-01'))]"/>

                    <separator/>

                    <!-- Group By -->
                    <group expand="0" string="Group By">
                        <filter name="group_by_employee"
                                string="Employee"
                                context="{'group_by': 'employee_id'}"/>
                        <filter name="group_by_department"
                                string="Department"
                                context="{'group_by': 'department_id'}"/>
                        <filter name="group_by_decision"
                                string="Decision"
                                context="{'group_by': 'decision'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- ═══════════════════════════════════════════════════════════════ -->
        <!--  ACTION                                                         -->
        <!-- ═══════════════════════════════════════════════════════════════ -->
        <record id="action_hr_disciplinary_action" model="ir.actions.act_window">
            <field name="name">Disciplinary Cases</field>
            <field name="res_model">hr.disciplinary.action</field>
            <field name="view_mode">list,pivot,graph,form</field>
            <field name="search_view_id" ref="view_hr_disciplinary_action_search"/>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No disciplinary cases found
                </p>
                <p>Create a new disciplinary case to track and manage employee disciplinary actions.</p>
            </field>
        </record>

        <!-- Pivot View -->
        <record id="view_hr_disciplinary_action_pivot" model="ir.ui.view">
            <field name="name">hr.disciplinary.action.pivot</field>
            <field name="model">hr.disciplinary.action</field>
            <field name="arch" type="xml">
                <pivot string="Discipline Analysis" sample="1">
                    <field name="employee_id" type="row"/>
                    <field name="decision" type="col"/>
                </pivot>
            </field>
        </record>

        <!-- Graph View -->
        <record id="view_hr_disciplinary_action_graph" model="ir.ui.view">
            <field name="name">hr.disciplinary.action.graph</field>
            <field name="model">hr.disciplinary.action</field>
            <field name="arch" type="xml">
                <graph string="Discipline Analysis" type="bar" sample="1">
                    <field name="employee_id"/>
                    <field name="decision"/>
                </graph>
            </field>
        </record>

    </data>
</odoo>
